# Backend Dockerfile
FROM node:18-alpine AS build

WORKDIR /app

# Install app dependencies
COPY package*.json ./
RUN npm install

# Copy rest of the application code
COPY . .

# Stage 2: Run the application in a slim image
FROM node:18-slim

# Install the 'useradd' utility (typically part of a utility package)
RUN apt-get update && \
    apt-get install -y --no-install-recommends **passwd** && \
    rm -rf /var/lib/apt/lists/*

# create non-root user (security best practice)
# -r: creates a system account (no home dir, lower UID)
# -s /bin/false: ensures no interactive shell login is possible (password disabled equivalent)
# -c '': GECOS field (comment) is empty
RUN useradd -r -s /bin/false -c '' appuser

WORKDIR /app

# Copy only the necessary files from the build stage
COPY --from=build /app .

# Change ownership to the non-root user
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose the port the app runs on
EXPOSE 5000

# Start the application
CMD ["/bin/sh", "-c", "sleep 15 && node index.js"]